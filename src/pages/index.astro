---
import Layout from '../layouts/Layout.astro'
import Hero from '../components/Hero.astro'
import { TracingBeam } from '../components/TracingBeam'
import { dummyContent } from '../data/dummyContent'
import { twMerge } from 'tailwind-merge'
import { Image } from 'astro:assets'
import HeroParallax from '../components/HeroParallax'
---

<Layout title='Welcome to Astro.'>
  <main class=' pt-5'>
    <TracingBeam className='px-5 pt-56' client:load>
      <div class='max-w-2xlmx-auto antialiased pt-4'>
       <!-- <Hero /> -->
        <HeroParallax client:load />
        {dummyContent.map((item: any, index: number) => (
          <div class="mb-10">
            <h2 class="bg-black text-white rounded-full text-sm w-fit px-4 py-1 mb-4">
              {item.badge}
            </h2>

            <p class={twMerge("text-xl mb-4")}>
              {item.title}
            </p>

            <div class="text-sm  prose prose-sm dark:prose-invert">
              {item?.image && (
                <Image
                  src={item.image}
                  alt="blog thumbnail"
                  height="1000"
                  width="1000"
                  class="rounded-lg mb-10 object-cover"
                />
              )}
              {item.description}
            </div>
          </div>
        ))}
      </div>
    </TracingBeam>
  </main>
</Layout>
