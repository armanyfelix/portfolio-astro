---
interface Props {
  title: string
  button:
    | {
        href: string
        label: string
      }
    | undefined
}
const button = {
  href: '',
  label: ''
}
const title = ''
---

<div class="mx-auto flex w-full items-center justify-evenly pb-28 pt-[4.5rem]">
  <h1 class="text-5xl font-bold text-secondary md:text-6xl lg:text-7xl">{title}</h1>
  {button ? (
    <a
      href={button.href}
      target="_blank"
      class="btn btn-circle glass px-2 text-lg font-bold lg:btn-lg md:text-xl lg:text-2xl"
    >
      {button.label}
    </a>
  ) : (
    ''
  )}
</div>
